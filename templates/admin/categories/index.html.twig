{% extends 'base.html.twig' %}

{% block title %}Gestion des categories
{% endblock %}

{% block body %}

	<h1>Gestion des categories</h1>
	<a href="{{ path("admin_categories_ajout") }}" class="btn shadow-1 rounded-1 blue">Ajouter un categorie</a>
	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Parent</th>
					<th>Actios</th>
				</tr>
			</thead>
			<tbody>
				{% for categorie in categories %}
					<tr>
						<td>{{categorie.id}}</td>
						<td>{{categorie.name}}</td>
						<td>{{categorie.parent}}</td>
						<td>
							<a href="{{ path("admin_categories_modifier", {"id": categorie.id}) }}" class="btn shadow-1 rounded-1 blue">Modifier</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
