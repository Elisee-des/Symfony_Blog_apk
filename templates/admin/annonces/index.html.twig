{% extends 'base.html.twig' %}

{% block title %}Gestion des annonces
{% endblock %}

{% block body %}

	<h1>Gestion des annonces</h1>
	<a href="{{ path("admin_annonces_ajout") }}" class="btn shadow-1 rounded-1 blue">Ajouter un Annonce</a>
	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Titre</th>
					<th>Date</th>
					<th>Active</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for annonce in annonces %}
					<tr>
						<td>{{annonce.id}}</td>
						<td>{{annonce.title}}</td>
						<td>{{annonce.createdAt|date}}</td>
						<td>
							<label class="form-switch mt-2">
								<input type="checkbox" {{ (annonce.active) ? 'checked' : "" }}
								data-id="{{annonce.active}}"
								>
								<span class="form-slider"></span>
							</label>
						</td>
						<td>
							<a href="{{ path("admin_annonces_modifier", {"id": annonce.id}) }}" class="btn shadow-1 rounded-1 blue">Modifier</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
