{% extends 'users.html.twig' %}

{% block title %}Moficication du mot de passe de
	{{ app.user.name }}
	{{ app.user.firstname }}
{% endblock %}

{% block body %}

	<div class="grix xs4 container">
		{% for message in app.flashes("message") %}
			<div class="col-xs4">
				<div class="p-3 my-2 rounded-1 red light-4 text-red text-dark-4">{{ message }}</div>
			</div>
		{% endfor %}
		<div class="col-xs4">
			<h1>Mofication du mot de passe de
				{{ app.user.name }}
				{{ app.user.firstname }}</h1>
			<form method="post">
				<div class="form-field">
					<label for="pass">Mot de passe</label>
					<input type="password" id="pass" name="pass" class="form-control rounded-1"/>
				</div>
				<div class="form-field">
					<label for="name">Confirmer votre mot passe</label>
					<input type="password" id="pass2" name="pass2" class="form-control rounded-1"/>
				</div>
				<button class="btn shadow-1 rounded-1 blue">Valider</button>
			</form>
		</div>

	</div>

{% endblock %}
