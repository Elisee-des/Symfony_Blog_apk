{% extends 'users.html.twig' %}

{% block title %}Hello UserController!
{% endblock %}

{% block body %}

	<div class="grix xs4 container">
        <div class="col-xs4"><h1>Profil de {{ app.user.name }} {{ app.user.firstname }}</h1></div>
		<div class="col-xs1">Nom</div>
		<div class="col-xs3">{{ app.user.name }}</div>
		<div class="col-xs1">Prenom</div>
		<div class="col-xs3">{{ app.user.firstname }}</div>
		<div class="col-xs1">Email</div>
		<div class="col-xs3">{{ app.user.email }}</div>
        <div class="col-xs4">
            <a href="#" class="btn shadow-1 rounded-1 blue">Modifier le profil</a>
            <a href="#" class="btn shadow-1 rounded-1 blue">Modifier le Mot de passe</a>
        </div>

         <div class="col-xs4">
            <h1>Annonces de {{ app.user.name }} {{ app.user.firstname }} ({{ app.user.annonces|length }})</h1>
        </div>
        	{% for annonce in app.user.annonces %}
                <div class="col-xs1">Titre :</div>
                <div class="col-xs3">{{ annonce.title }}</div>
            {% endfor %}
	</div>

{% endblock %}
